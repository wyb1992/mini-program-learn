.companyInfo {
    display: block;
    height: 40px;
    line-height: 40px;
    padding: 10px 0 10px 10px;
    border-bottom: solid 1px #f2f2f2;
}

.companyInfo .logo {
    /*position: absolute;*/
    left: 10px;
    top: 10px;
    width: 40px;
    height: 40px;
}

.companyInfo .name {
    color: #4a4a4a;
    font-size: 14px;
    position: relative;
    display: inline;
}

.companyInfo .arrow {
    right: 10px;
    top: 13px;
    width: 15px;
    height: 15px;
    background-size: 100%;
}
