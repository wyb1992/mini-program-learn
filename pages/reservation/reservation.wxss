.form input {
    padding-left: 20px;
    font-size: 14px;
    color: #4a4a4a;
    text-align: left;
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
    height: 50px;
}

.form .p {
    font-size: 12px;
    color: #9b9b9b;
    line-height: 14px;
    text-align: center;
    margin-top: 10px;
}

.form .button-box {
    height: auto;
    background: #F2F2F2;
}

.form .button-box button {
    width: 88%;
    height: 40px;
    font-size: 16px;
    color: #fff;
    background: #1ab054;
    outline: 0;
    border: none;
    border-radius: 5px;
    margin: 30px 6%;
}

