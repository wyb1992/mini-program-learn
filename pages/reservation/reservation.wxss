page {
    background-color: #f4f4f4;
}

.bg {
    position: absolute;
    bottom: 0;
    top: 0 !important;
    width: 100%;
}

.body {
    position: relative;
}

.body .background {
    width: 100%;
    height: 220px;
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    display: block;
}

.body .company {
    position: absolute;
    bottom: -40px;
    height: 80px;
    left: 10px;
    right: 10px;
    background: #fff;
    border-radius: 5px;
}

.body .company .logo {
    width: 60px;
    height: 60px;
    display: inline-block;
    margin: 10px;
}

.body .company .name {
    font-size: 16px;
    color: #444;
    text-align: left;
    margin: 28px 0 0 80px;
}

.form {
    position: relative;
    margin-top: 50px;
    padding: 0;
    display: block;
}

