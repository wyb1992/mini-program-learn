.navigator-hover {
    color: blue;
}

.content {
    background: #fff;
    border-radius: 5px;
    margin: 10px 10px 10px;
}

.inline {
    display: inline-block;
}

.padding {
    padding-right: 7px;
}

.content .top {
    position: relative;
    padding: 10px;
    border-bottom: 1px solid #f4f4f4;
}

.content .top .stage {
    font-size: 12px;
    color: #fff;
    line-height: 12px;
    display: inline-block;
    background: #36be66;
    border-radius: 4px;
    padding: 3px 5px;
    margin-right: 5px;
}

.content .top .project-name {
    font-size: 15px;
    color: #4a4a4a;
    line-height: 20px;
    padding-bottom: 10px;
    font-weight: 700;
}

.content .top .view {
    padding-right: 7px;
    font-size: 12px;
    color: #9b9b9b;
    line-height: 12px;
}

.content .level1 {
    font-size: 15px;
    color: #4a4a4a;
    line-height: 15px;
    padding: 10px 0;
}

.content .level1 .role {
    display: inline-block;
    font-size: 12px;
    color: #36be66;
    line-height: 12px;
    border: 1px solid #36be66;
    border-radius: 4px;
    padding: 2px;
    margin: 5px;
}

.content .middle .level1 .person-name {
    font-size: 15px;
    color: #4a4a4a;
    line-height: 15px;
    padding: 10px 0;
}

.content .middle .level1 .imgUrl {
    width: 30px;
    height: 30px;
    margin: 0 10px 0 10px;
    border-radius: 50%;
    vertical-align: middle;
}

.content .middle .level1 .eventDate {
    position: absolute;
    right: 20px;
    padding-top: 5px;
    font-size: 12px;
    color: #9b9b9b;
    line-height: 12px;
}

.content .middle .photo-list {
    width: 31.5%;
    margin-left: 5px;
}

.content .middle .photo-list .photo {
    width: 100%;
    height: 120px;
}

.content .bottom {
    position: relative;
    padding-bottom: 10px;
}

.content .bottom .icon {
    background-size: 30px 30px;
    width: 30px;
    height: 30px;
    display: inline-block;
    margin-left: 10px;
}

.content .bottom .fans-list {
    position: absolute;
    top: 3px;
    left: 40px;
    height: 25px;
    width: calc(100% - 120px);
    overflow: hidden;
}

.content .bottom .fans-list .fans-img {
    width: 25px;
    height: 25px;
    margin-left: 5px;
    border-radius: 50%;
}

.content .bottom .fans-num {
    position: absolute;
    right: 10px;
    font-size: 12px;
    color: #9b9b9b;
    top: 0;
    line-height: 35px;
}