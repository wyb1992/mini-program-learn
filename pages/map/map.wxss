.company {
    position: relative;
    height: 70px;
    border-bottom: 1px dashed #ccc;
}

.company .logo {
    display: block;
    width: 50px;
    height: 50px;
    float: left;
    margin: 10px 0 0 10px;
}

.company .info {
    display: inline-block;
    /*margin: 10px 0 0 10px;*/
    margin-left: 10px;
}

.company .info .name {
    height: 14px;
    font-size: 14px;
    color: #444444;
    display: block;
    margin-top: 15px;
}

.company .info .num {
    font-size: 13px;
    color: #00BFD1;
    display: block;
    margin-top: 10px;
}

.company .reserve {
    display: inline-block;
    position: absolute;
    right: 5px;
    top: 10px;

}

.company .reserve .btn {
    width: 95px;
    height: 35px;
    font-size: 13px;
    margin: 4px 0 0 10px;
    display: inline-block;
    background: rgba(25, 176, 84, 0.80);
    color: #ffffff;
    line-height: 35px;
}

.follow-list {
    position: relative;
    height: 40px;
}

.follow-list .list {
    position: absolute;
    width: 70%;
    height: 40px;
    display: inline;
}

.follow-list .follow {
    display: inline;
}

.follow-list image {
    background-size: 30px 30px;
    width: 30px;
    height: 30px;
    display: inline-block;
    margin: 5px 0 0 10px;
}

.follow-list .icon {
    width: 30px;
    height: 30px;
    display: inline-block;
    border-radius: 50%;
}

.follow-list .number {
    font-size: 13px;
    color: #9b9b9b;
    position: absolute;
    top: 15px;
    right: 5px;

}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.drawer_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
}

.close_icon {
    width: 25px;
    height: 25px;
    line-height: 20px;
    font-size: 30px;
    position: absolute;
    right: 5px;
    top: 5px;
    padding: 10 rpx;
    color: #ccc;
    border: 1 rpx solid #ccc;
    border-radius: 50%;
    text-align: center;
    background: #fff;
}

.drawer_attr_content {
    padding: 20 rpx;
    height: 110 rpx;
    overflow-y: scroll;
}

.drawer_desc {
    font-size: 26 rpx;
    margin: 20 rpx;
}

.project-info .project-img {
    width: 60px;
    height: 60px;
    position: absolute;
    left: 10px;
    top: 10px;
}

.project-info .info {
    position: relative;
    height: 60px;
    padding: 10px 10px 10px 83px;
    line-height: 1;
    font-size: 0;
    margin-top: 10px;
}

.project-info .info .stage {
    font-size: 11px;
    background: #1AB054;
    color: #FFF;
    border-radius: 5px;
    margin-right: 10px;
    padding: 3px 5px;
    vertical-align: text-bottom;
}

.project-info .info .project-name {
    font-size: 15px;
    color: #444444;
    line-height: 20px;
    vertical-align: bottom;
}

.project-info .info .view-number {
    font-size: 12px;
    color: #00BFD1;
    display: block;
    margin-top: 10px;
}

.project-info .arrow {
    width: 14px;
    height: 28px;
    position: absolute;
    top: 20px;
    right: 10px;

}